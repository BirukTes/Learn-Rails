<% flash.each do |name, msg| %>
    <%# First, the expression, if msg.is_a?(String) serves as a test to make sure we only display messages that are strings. %>
    <% if msg.is_a?(String) %>
        <%# Second, we use the Rails content_tag view helper to create the HTML div . The content_tag
helper eliminates the messy soup of angle brackets and quote marks we used to create the
HTML output in the example above. %>
        <%= content_tag(:div, msg, :class => "flash_#{name}") %>
    <% end %>
<% end %>
